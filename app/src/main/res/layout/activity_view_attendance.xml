<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAttendanceActivity"
    android:background="@drawable/bwelcome">

    <ImageView
        android:id="@+id/viewattendancelogoIV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/applogo"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/viewattendancesloganTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewattendancelogoIV"
        android:text="@string/education_and_training_for_the_real_world"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/viewattendancebackBTN"
        android:layout_below="@+id/viewattendancesloganTV"
        android:text="Back"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/viewattendancehomeBTN"
        android:layout_below="@+id/viewattendancesloganTV"
        android:text="HOME"
        android:textSize="20dp"
        android:textColor="@color/colorText"
        android:layout_marginTop="10dp"
        android:layout_marginStart="270dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nviewattendancedateTV"
        android:layout_below="@id/viewattendancehomeBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:text="Date"
        android:textSize="20sp"
        android:textColor="@color/colorText"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TakeAttendanceActivity"
    android:background="@drawable/bwelcome">

    <ImageView
        android:id="@+id/takeattendancelogoIV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/applogo"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/takeattendancesloganTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/takeattendancelogoIV"
        android:text="@string/education_and_training_for_the_real_world"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/takeattendancebackBTN"
        android:layout_below="@+id/takeattendancesloganTV"
        android:text="Back"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/takeattendancehomeBTN"
        android:layout_below="@+id/takeattendancesloganTV"
        android:text="HOME"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:layout_marginStart="270dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/nscanBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:layout_marginTop="400dp"
        android:layout_marginStart="170dp"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewClassesActivity"
    android:background="@drawable/bwelcome"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/newclasseslinearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ncreateclassTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            android:text="Create Class"
            android:textSize="20sp"
            android:textColor="@color/colorText"/>

        <TextView
            android:id="@+id/naddstudenttoclasscodeTV"
            android:text="Add Student"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:layout_marginStart="100dp"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/ncreateunitsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:text="Create Unit"
        android:textSize="20sp"
        android:textColor="@color/colorText"/>


    <TextView
        android:id="@+id/navailableclassTV"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ncreateunitsTV"/>

    <TextView
        android:id="@+id/navailableunitsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navailableclassTV"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorText"
        android:textSize="20sp" />



</LinearLayout>